<%= form_tag "/contacts/#{@contact.id}", method: :patch do -%>
  <div class="form-group">
    First name: <input type="text" name="first_name" value="<%= @contact.first_name %>" class="form-group">
  </div>
  <div class="form-group">
    Last name: <input type="text" name="last name" value="<%= @contact.last_name %>" class="form-group">
  </div>
  <div> 
    Phone number: <input type="text" name="phone_number" value="<%= @contact.phone_number %>" class="form-group">
  </div>
  <div class="form-group">
    Email: <input type="text" name="email" value="<%= @contact.email%>" class="form-group">
  </div>
  <div>
     <input type="submit" value="Update contact" class="btn btn-info">
  </div>
<% end %>